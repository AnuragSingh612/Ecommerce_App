<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="State"
            android:id="@+id/state"
           android:layout_below="@+id/phone"
            />


        <TextView
            android:id="@+id/viewitem1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="item / Qty"
            />


        <TextView
            android:id="@+id/viewitem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_below="@+id/viewitem1"
            android:inputType="textPersonName"
            android:hint="@string/item_qty"
            />
        <TextView
            android:id="@+id/viewitem3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_below="@+id/viewitem2"
            android:inputType="textPersonName"
            android:hint="Item / Qty"

            />
        <TextView
            android:id="@+id/viewitem4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_below="@+id/viewitem3"
            android:inputType="textPersonName"
            android:hint="Item / Qty"

            />
        <TextView
            android:id="@+id/viewitem5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_below="@+id/viewitem4"
            android:inputType="textPersonName"
            android:hint="Item / Qty"
            />
        <TextView
            android:id="@+id/viewitem6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_below="@+id/viewitem5"
            android:inputType="textPersonName"
            android:hint="Item / Qty"
            />
        <TextView
            android:id="@+id/viewitem7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_below="@+id/viewitem6"
            android:inputType="textPersonName"
            android:hint="Item / Qty"
            />

        <TextView
            android:id="@+id/viewitem8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewitem7"
            android:ems="10"
            android:hint="Item / Qty"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/viewitem9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewitem8"
            android:ems="10"
            android:hint="Item / Qty"
            android:inputType="textPersonName" />



        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewitem9"
            android:ems="10"
            android:layout_marginTop="20dp"
            android:hint="Address- Street/Lane"
            android:inputType="textPersonName"

            />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:ems="10"
            android:hint="Phone No?"
            android:inputType="textPersonName"
             />


    </RelativeLayout>




</androidx.cardview.widget.CardView>